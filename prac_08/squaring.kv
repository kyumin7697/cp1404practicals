BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 10

        TextInput:
            id: input_number
            text: '7'
            font_size: 32
            multiline: False

        Button:
            text: 'Square'
            font_size: 24
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            font_size: 32
            color: (1, 0.4, 0.7, 1)

    BoxLayout:
        size_hint_y: None
        height: 30
        padding: 5
        Label:
            text: 'Enter a number and press "Square".'
            font_size: 16